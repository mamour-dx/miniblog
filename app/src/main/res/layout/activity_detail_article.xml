<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    tools:context=".DetailArticleActivity">

    <!-- 1) Toolbar avec l’ID toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/secondary"
        android:titleTextColor="@color/primary"
        app:navigationContentDescription="@string/back"
        tools:title="Article 1" />

    <!-- 2) Carte blanche pour le contenu, décalée sous la toolbar -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <!-- 3) Contenu déroulant à l’intérieur de la carte -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Titre de l’article -->
                <TextView
                    android:id="@+id/tvDetailTitre"
                    style="@style/TextAppearance.BlogApp.Title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Article 1" />

                <!-- Ligne auteur et date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/tvDetailAuthor"
                        style="@style/TextAppearance.BlogApp.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Écrit par John Doe" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvDetailDate"
                        style="@style/TextAppearance.BlogApp.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21 Novembre 2022" />
                </LinearLayout>

                <!-- Séparateur -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/primary" />

                <!-- Contenu de l’article -->
                <TextView
                    android:id="@+id/tvDetailContenu"
                    style="@style/TextAppearance.BlogApp.Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit…"
                    tools:text="(le texte complet de l’article ira ici)" />

            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
